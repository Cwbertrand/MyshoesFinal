{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block navbar %}
{% endblock %}

{% block body %}
<main class="container">
    <div class="row account">
        {% include('_partials/leftnavuseraccount.html.twig') %}
        <section class="col-9 right_side_account">
            <div class="container pt-4">
                <h4 class="basket_page">My address</h4>
            </div>
            <div class="d-flex flex-wrap pb-3">
                <a href="{{path ('add_address')}}" class="mx-3">
                    <div class="card bg-light d-flex justify-content-center align-items-center" style="width: 14rem; height: 24rem">
                        <i class="display-4 fa-solid fa-circle-plus mb-2"></i>
                        <p class="h5">Add an address</p>
                    </div>
                </a>
                {% for address in form %}
                    
                <div class="me-3 card mt-3 bg-light p-3" style="width: 17rem; height: 24rem">
                    <h6>Domicile Address</h6>
                    <h5 class="my-4"><span>{{address.firstname}}</span> {{address.lastname}}</h5>
                    <p>
                        {{address.company}}<br>
                        {{address.mobile}}<br>
                        {{address.street}} <br>
                        {{address.postalcode}} <br>
                        {{address.city}} <br>
                        {{address.country}} <br>
                    </p>
                    <div class="d-flex justify-content-center m-auto">
                        <a href="{{path ('delete_address', {'id': address.id})}}" class="addrese_delete"><i class="fa-solid fa-trash-can"></i></a>
                        <a href="{{path ('edit_address', {'id': address.id})}}" class="addrese_modify"> Edit </a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>
    </div>
</main>

{% endblock %}

{% block footer %}
{% endblock %}
