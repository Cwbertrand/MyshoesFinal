{% extends 'base.html.twig' %}

{% block title %}Add your home address{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}

        <div class="container py-5">
            {{ form_start(form)}}
                <div class="row">
                    <div class="col-md-6"> {{ form_row(form.firstname)}} </div>
                    <div class="col-md-6"> {{ form_row(form.lastname)}} </div>
                    <div class="col-md-12"> {{ form_row(form.mobile)}} </div>
                    <div class="col-md-12"> {{ form_row(form.company)}} </div>
                    <div class="col-md-12"> {{ form_row(form.street)}} </div>
                    <div class="col-md-12"> {{ form_row(form.postalcode)}} </div>
                    <div class="col-md-12"> {{ form_row(form.city)}} </div>
                    <div class="col-md-12"> {{ form_row(form.country)}} </div>
                    <div class="col-md-12" style="background-color: #000026;"> {{ form_row(form.submit)}} </div>
                </div>
            {{ form_end(form)}}
        </div>
{% endblock %}

{% block footer %}{% endblock %}