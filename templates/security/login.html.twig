{% extends 'base.html.twig' %}

{% block signupincss %}
<link rel="stylesheet" href="{{asset('css/signupin.css')}}">
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="mt-1 mx-3 home">
    <h2><a href="{{path ('home')}}">MyShoes</a></h2>
</div>
<section class="d-flex justify-content-center w-100 pt-4 size_section">
    <div class="background_sign container">
        <form method="post" class="container background_sign_main">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
            <div class="px-4">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <a class="" href="{{ path('app_forgot_password_request') }}">Forgot password?</a><br>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-success my-3" type="submit"> Sign in</button>
            </div>
            <div class="text-center">
                <p>Don't have an account yet? <span><a class="btn_signin" href="{{path ('app_register')}}">Sign Up</a></span></p>
            </div>
        </form>
        <div class="image_sign"></div>
    </div>
    <div></div>
</section>
{% endblock %}
